/**index.wxss**/
.hint{
  font-size: large;
  display: flex;
  align-items: center;
  align-content: center;
  color: #707070;
}
.info_block{
  width: 88%;
  height: auto;
  background-color:white;
  border-radius: 20rpx; 
  padding-top:20rpx; 
  margin-bottom:40rpx; 
}
page{
  height: 100%;
  background-color:#b9c7f1;
}
.container{
  padding-top: 120rpx;
  width: 100%;
  height: 112%;
  justify-content: flex-start;
}
.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  padding-top: 20rpx;
}
.userinfo-nickname {
  color:#5582ff;
}
.avatar{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 50rpx;
}
.info1{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.usr_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.create_time{
  margin-left: 40rpx;
  color: #999;
}
.item-icon{
  width: 40rpx;
  height: 40rpx; 
  margin-right: 30rpx;
}
.item{
  display: flex;
  flex-direction: row;
  padding-left: 140rpx;
  margin-bottom: 10rpx;
}
.item-text{
  color: #666;
  font-size:35rpx;
}
.c-text{
  padding-left: 40rpx;
  padding-top:16rpx;
  
}
.title{
  margin-right:20rpx; 
  color: #5582ff
}
#t-text{
  border-bottom:2px #b9c7f1 solid;
  padding-bottom: 20rpx;
}
.comments{
  color: #666;
}

.comment{
  background-color: transparent;
  color: #5582ff
} 

.nav-tab{
  width:100%;
  position:fixed; 
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  margin-bottom: 40rpx;
}
.tab-btn{
  width: 20%;
  border-radius: 0rpx;
  color: #666;
  font-size: 35rpx;
  background-color: transparent;
  border:none;
}
.tab-btn.active{
  color: #5582ff;
  border-bottom: 10rpx solid #5582ff;
}

button::after {
  border: none;
}


.picker_grp{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
#pick{
  width: 70%;
   
}
.picker{
  font-size: 33rpx;
  background-color: white;
  padding: 15rpx;
  margin-bottom:20rpx; 
  border-radius: 15rpx;
  color: #5582ff;
}