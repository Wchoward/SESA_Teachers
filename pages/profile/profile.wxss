.userinfo {
  padding-top:40rpx; 
  padding-bottom:20rpx; 
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 0.3px #cbcbcb solid;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
}
.line{
  width: 100%;
  height: 0.3px;
  background-color: #cbcbcb;
}
.fun-btns{
  display: flex;
  flex-direction: row;
  padding:25rpx;
  border-bottom: 0.3px #cbcbcb solid;
  justify-content: space-between;
  color: #707070;
}
.center{
  flex: 1;
}
#login-btn{
  width:auto;
  background-color: #5582ff;
  color: white;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
